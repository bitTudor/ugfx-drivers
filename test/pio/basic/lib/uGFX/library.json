{
    "name": "uGFX",
    "keywords": "uGFX, graphics, windowing",
    "description": "Portable graphics library",
    "version": "2.7",
    "repository":
    {
        "type": "git",
        "url": "https://git.ugfx.io/uGFX/uGFX"
    },
    "build": {
        "flags": "-Isrc/src/gdisp/mcufont -Isrc",
        "srcFilter": [
            "+<src/src/*>",
            "-<src/src/gfx_mk.c>",
            "-<src/src/*/*_mk.c>"
        ] 
    },
    "frameworks": "*"
}